    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^22.2.0",
        "@types/lodash": "^4.14.104",
        "jest": "^22.4.2",
        "react": "^16.2.0",
        "simplr-tslint": "^1.0.0-alpha.9",
        "ts-docs-gen": "^0.2.0",
