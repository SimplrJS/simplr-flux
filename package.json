{
    "name": "simplr-flux",
    "version": "4.0.0",
    "description": "Strongly-typed Flux architecture.",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc -p .",
        "watch": "tsc -p . -w",
        "pretest": "tsc -p . --noEmit && tslint -p .",
        "test": "jest"
    },
    "author": "Martynas Å½ilinskas <martynas@quatrodev.com> (https://github.com/MartynasZilinskas)",
    "files": [
        "dist",
        "**/*.md"
    ],
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^24.0.9",
        "istanbul-azure-reporter": "^0.1.4",
        "jest": "^24.1.0",
        "jest-junit": "^6.3.0",
        "simplr-tslint": "^1.0.0-alpha.14",
        "ts-jest": "^24.0.0",
        "tslint": "^5.13.1",
        "tslint-language-service": "^0.9.9",
        "typescript": "^3.3.3333"
    },
    "dependencies": {
        "tslib": "^1.9.3"
    },
    "jest": {
        "verbose": true,
        "preset": "ts-jest",
        "reporters": [
            "default",
            "jest-junit"
        ],
        "collectCoverage": true,
        "testRegex": "/__tests__/.*\\.(test|spec).(ts|tsx)$",
        "collectCoverageFrom": [
            "src/**/*.{ts,tsx}",
            "!src/index.ts"
        ],
        "coverageReporters": [
            "cobertura",
            "istanbul-azure-reporter"
        ]
