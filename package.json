{
    "name": "simplr-flux",
    "description": "Strongly-typed Flux architecture.",
    "main": "dist/simplr-flux.js",
    "types": "@types/index.d.ts",
    "version": "2.3.0",
    "scripts": {
        "build": "webpack",
        "pretest": "tsc -p . --noEmit && tslint -p .",
        "test": "jest",
        "test-ci": "npm run test -- --maxWorkers=4",
        "watch": "webpack --watch",
        "uglifyjs": "uglifyjs ./dist/simplr-flux.js -o ./dist/simplr-flux.min.js --compress --mangle",
        "release": "npm run build && npm run uglifyjs"
    },
    "author": "Giedrius Grabauskas <giedrius@quatrodev.com> (https://github.com/giedriusgrabauskas)",
    "files": [
        "dist",
        "@types",
        "**/*.md",
        "LICENSE",
        "!examples"
    ],
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^22.2.0",
        "jest": "^22.4.2",
        "simplr-tslint": "1.0.0-alpha.8",
        "ts-jest": "^22.4.1",
        "ts-loader": "^2.1.0",
        "tslint": "^5.9.1",
        "tslint-language-service": "^0.9.8",
        "tslint-loader": "^3.6.0",
        "typescript": "^2.7.2",
        "uglifyjs": "^2.4.11",
        "webpack": "^2.6.1"
    },
    "dependencies": {
        "@types/flux": "^3.1.7",
        "action-emitter": "^0.2.1",
        "flux": "^3.1.3",
        "immutable": "4.0.0-rc.9",
        "tslib": "^1.9.0"
    },
    "jest": {
        "collectCoverage": true,
        "collectCoverageFrom": [
            "src/**/*.{ts,tsx}",
            "!*",
            "!**/__tests__/**/*"
        ],
        "transform": {
            ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "globals": {
            "ts-jest": {
                "tsConfigFile": "./tsconfig.json"
            }
        },
        "testRegex": "/__tests__/.*\\.(test|spec).(ts|tsx|js)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ]
    }
}
