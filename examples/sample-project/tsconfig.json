{
    "compilerOptions": {
        "target": "es5",
        "strict": true,
        "esModuleInterop": true,
        "rootDir": "src",
        "outDir": "dist",
        "jsx": "react",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "plugins": [
            {
                "name": "tslint-language-service",
                "alwaysShowRuleFailuresAsWarnings": true,
                "ignoreDefinitionFiles": true
            }
        ]
    },
    "exclude": ["node_modules", "dist"]
}
